<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 assembly-1.1.2.xsd ">
	<id>crawler-compress</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.parent.build.directory}/${project.parent.artifactId}-${project.parent.version}-release</directory>
			<outputDirectory>${project.parent.artifactId}-${project.parent.version}-release</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
